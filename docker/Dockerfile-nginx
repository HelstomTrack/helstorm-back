# Dockerfile-nginx
FROM nginx:latest

# Copie la config Nginx (avec la directive "listen" adaptée)
COPY build/nginx/default.conf /etc/nginx/conf.d/default.conf

# Création du dossier de ton app (même chemin que dans la conf Nginx)
RUN mkdir -p /var/www/project
WORKDIR /var/www/project
EXPOSE 8080

# Lancement de nginx
CMD ["nginx", "-g", "daemon off;"]
