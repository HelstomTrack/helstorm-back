FROM php:8.2-fpm
SHELL ["/bin/bash", "-o", "pipefail", "-c"]

# 1) DÃ©pendances
RUN set -eux; \
  apt-get update; \
  apt-get install -y --no-install-recommends \
    git curl wget zip unzip sudo ssh ca-certificates locales \
    build-essential pkg-config \
    zlib1g-dev libzip-dev \
    libxml2-dev \
    libicu-dev \
    libpng-dev libjpeg62-turbo-dev libfreetype6-dev libwebp-dev; \
  DEB_MULTIARCH="$(dpkg-architecture -qDEB_HOST_MULTIARCH)"; \
  export PKG_CONFIG_PATH="/usr/lib/${DEB_MULTIARCH}/pkgconfig:/usr/lib/pkgconfig:/usr/share/pkgconfig"; \
  pkg-config --modversion icu-uc; \
  pkg-config --modversion icu-i18n; \
  docker-php-ext-configure gd --with-freetype --with-jpeg --with-webp; \
  docker-php-ext-install -j"$(nproc)" pdo_mysql soap zip opcache gd intl; \
  rm -rf /var/lib/apt/lists/*

# Config PHP
COPY docker/build/php/opcache.ini /usr/local/etc/php/conf.d/
COPY docker/build/php/custom.ini  /usr/local/etc/php/conf.d/

# Composer
RUN curl -sS https://getcomposer.org/installer | php \
 && mv composer.phar /usr/local/bin/composer

WORKDIR /var/www/project/
COPY . /var/www/project/
