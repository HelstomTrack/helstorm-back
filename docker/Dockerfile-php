FROM php:8.2-fpm

# Paquets nécessaires aux extensions PHP + utilitaires
RUN set -eux; \
    apt-get update; \
    apt-get install -y --no-install-recommends \
        git \
        zlib1g-dev \
        libxml2-dev \
        libpng-dev \
        libjpeg62-turbo-dev \
        libfreetype6-dev \
        libzip-dev \
        libicu-dev \
        pkg-config \
        vim curl ca-certificates \
        subversion apt-transport-https apt-utils \
        build-essential locales acl mailutils wget zip unzip \
        gnupg \
        sudo \
        openssh-client \
    ; \
    rm -rf /var/lib/apt/lists/*

# Configurer GD pour JPEG + FreeType AVANT l'installation
RUN docker-php-ext-configure gd --with-freetype --with-jpeg

# Compiler les extensions (parallèle)
RUN docker-php-ext-install -j"$(nproc)" \
      pdo_mysql \
      soap \
      zip \
      opcache \
      gd \
      intl

COPY docker/build/php/opcache.ini /usr/local/etc/php/conf.d/
COPY docker/build/php/custom.ini /usr/local/etc/php/conf.d/

# Composer (version récente recommandée)
RUN curl -sS https://getcomposer.org/installer | php && mv composer.phar /usr/local/bin/composer
# Évite de figer une version très ancienne :
# RUN composer self-update --2  # (facultatif : rester en v2)

# ⚠️ PHPUnit 6.5 est incompatible avec PHP 8.2 — utiliser au moins PHPUnit 9/10.
# Exemple : installer phpunit 9 via phar
RUN wget -O /usr/local/bin/phpunit https://phar.phpunit.de/phpunit-9.phar \
    && chmod +x /usr/local/bin/phpunit

# Utilisateurs/droits
RUN usermod -u 1000 www-data \
 && usermod -a -G www-data root \
 && mkdir -p /var/www/.composer /var/www/project \
 && chown -R www-data:www-data /var/www

WORKDIR /var/www/project/

COPY . /var/www/project/
