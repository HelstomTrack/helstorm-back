# docker/Dockerfile-php
FROM php:8.2-fpm

# Bonnes pratiques : échouer vite, et nettoyer après apt
SHELL ["/bin/bash", "-o", "pipefail", "-c"]

RUN apt-get update \
 && apt-get install -y --no-install-recommends \
    git curl wget zip unzip sudo ssh ca-certificates locales \
    build-essential pkg-config \
    zlib1g-dev libzip-dev \
    libxml2-dev \
    libicu-dev \            # ← nécessaire pour intl
    libpng-dev libjpeg62-turbo-dev libfreetype6-dev libwebp-dev \
 && rm -rf /var/lib/apt/lists/*

# gd : activer les options qui vont bien
RUN docker-php-ext-configure gd --with-freetype --with-jpeg --with-webp

# Compiler les extensions (en parallèle)
RUN docker-php-ext-install -j"$(nproc)" \
    pdo_mysql \
    soap \
    zip \
    opcache \
    gd \
    intl

# Config PHP
COPY docker/build/php/opcache.ini /usr/local/etc/php/conf.d/
COPY docker/build/php/custom.ini  /usr/local/etc/php/conf.d/

# Installer Composer (actuel)
RUN curl -sS https://getcomposer.org/installer | php \
 && mv composer.phar /usr/local/bin/composer

# Users/permissions
RUN usermod -u 1000 www-data \
 && usermod -a -G www-data root \
 && mkdir -p /var/www /var/www/.composer \
 && chown -R www-data:www-data /var/www /var/www/.composer

WORKDIR /var/www/project/
COPY . /var/www/project/
